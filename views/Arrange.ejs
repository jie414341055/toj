<link href="/stylesheets/arrange.css" rel="stylesheet">
<script src="/javascripts/arrange.js"></script>
<div id="errmsg" class="hide">
</div> 
<div class="modal-header">
	<h3 style="text-align:center"><font color="#428BCA">Arrange Contest</font></h3>
</div>
<div class="modal-body">
	<div class="info">
		<form  id="arrange" method="post" class="form-horizontal" role="form">
			<div class="form-group">
				<label for="inputTitle" class="col-sm-2 control-label">Title:</label>
				<div class="col-sm-7"><input type="title" class="form-control" id="inputTitle" placeholder="Contest Title"></div>*
			</div>
			<div class="form-group">
				<label for="inputDesc" class="col-sm-2 control-label">Desc:</label>
				<div class="col-sm-7"><textarea class="form-control" rows="6" id="inputDesc" placeholder="This is a ICPC format Contest, the contest will last 5 hours."></textarea></div>
			</div>
			<div class="form-group">
				<label for="inputSTtime" class="col-sm-2 control-label">Start Time:</label>
				<div class="col-sm-7"><input class="form-control" id="inputSTtime" placeholder="0000-00-00 00:00:00"></div>*
			</div>
			<div class="form-group">
				<label for="inputEDtime" class="col-sm-2 control-label">End Time:</label>
				<div class="col-sm-7"><input class="form-control" id="inputEDtime" placeholder="0000-00-00 00:00:00"></div>*
			</div>
			<div class="form-group">
				<label for="inputPasswd" class="col-sm-2 control-label">Password:</label>
				<div class="col-sm-7"><input class="form-control" id="inputPasswd" placeholder="Leave it blank if no need."></div>
			</div><br>
		</form>
	</div>
	<div class="prob">
		<form class="form-horizontal" role="form">
			<%for(var i=1001;i<=1011;++i){%>
			<div class="form-group">
				<label for="Prob1" class="col-sm-2 control-label"><%= i %>:</label>
				<div class="col-sm-3"><select id="oj<%- i %>" class="form-control">
						<option value="HDU">HDU</option>
						<option value="POJ">POJ</option>
				</select></div>
				<div class="col-sm-3"><input class="form-control" type="text" id="pid<%- i %>" placeholder="Prob ID"></div>
			</div>
			<%}%>
		</form>
	</div>

</div>
<div ><center>
		<button type="submit" class="btn btn-primary" onclick="Submit()">Submit</button>
</center></div>
